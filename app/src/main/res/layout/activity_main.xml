<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout

    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawer_layout"

    android:layout_width="match_parent"

    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/bin_pic_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"

        xmlns:app="http://schemas.android.com/apk/res-auto"

        xmlns:tools="http://schemas.android.com/tools"
        xmlns:fab="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:orientation="vertical"
        android:paddingTop="10dp"

        tools:context=".MainActivity"

        >
    <EditText
        android:id="@+id/et_rho"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="Rho"/>
    <EditText
        android:id="@+id/et_beta"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="Beta"/>
    <EditText
        android:id="@+id/et_lambda"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="Lambda"/>
    <EditText
        android:id="@+id/et_blambda"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="Blambda"/>
    <EditText
        android:id="@+id/et_bgtime"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="Begin Time"/>

    <EditText
        android:id="@+id/et_step"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="Step"/>

    <EditText
        android:id="@+id/et_endtime"
        android:layout_width="fill_parent"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:layout_margin="10dip"
        android:textColorHint="#AAAAAA"
        android:textSize="15dip"
        android:singleLine="true"
        android:hint="End Time"
        />
        <com.nightonke.boommenu.BoomMenuButton
            android:id="@+id/bmb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:bmb_buttonEnum="textOutsideCircle"
            app:bmb_piecePlaceEnum="piecePlace_dot_9_1"
            app:bmb_buttonPlaceEnum="buttonPlace_sc_9_1"
            />
        <com.getbase.floatingactionbutton.FloatingActionsMenu

            android:id="@+id/fab_menu"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"

            android:layout_marginRight="16dp"

            android:layout_marginEnd="0dp"
            fab:fab_expandDirection="down"

            fab:fab_addButtonColorNormal="@color/colorAccent"

            fab:fab_icon="@drawable/ic_btn_menu"

            fab:fab_labelStyle="@style/menu_labels_style"

            fab:fab_labelsPosition="left">



            <com.getbase.floatingactionbutton.FloatingActionButton

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:id="@+id/fab_1"

                fab:fab_colorNormal="@color/colorAccent"

                fab:fab_size="mini"

                fab:fab_icon="@drawable/ic_btn_hansen"

                fab:fab_title="Hansen Method"/>

            <com.getbase.floatingactionbutton.FloatingActionButton

                android:layout_width="wrap_content"

                android:layout_height="wrap_content"

                android:id="@+id/fab_2"

                fab:fab_colorNormal="@color/colorAccent"

                fab:fab_size="mini"

                fab:fab_icon="@drawable/ic_btn_taylor"

                fab:fab_title="Taylor Method"/>

        </com.getbase.floatingactionbutton.FloatingActionsMenu>


    </LinearLayout>
    </android.support.v4.widget.SwipeRefreshLayout>
    <android.support.design.widget.NavigationView

        android:id="@+id/nav_view"

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:layout_gravity="start"

        app:headerLayout="@layout/nav_header"

        app:menu="@menu/nav_menu" />

</android.support.v4.widget.DrawerLayout>